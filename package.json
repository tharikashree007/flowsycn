{
  "name": "mern-project-management",
  "version": "1.0.0",
  "description": "MERN Stack Project Management System",
  "scripts": {
    "install-backend": "cd backend && npm install",
    "install-frontend": "cd \"project management system\" && npm install",
    "install-all": "npm run install-backend && npm run install-frontend",
    "build": "./build.sh",
    "start-backend": "cd backend && npm run dev",
    "start-frontend": "cd \"project management system\" && npm run dev",
    "start": "cd backend && npm start",
    "dev": "concurrently \"npm run start-backend\" \"npm run start-frontend\""
  },
  "devDependencies": {
    "concurrently": "^7.6.0"
  }
}